                <th>Etancheite</th>
                <th>Garantie</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for montre in montres %}
            <tr>
                <td>{{ montre.id }}</td>
                <td>{{ montre.titre }}</td>
                <td>{{ montre.reference }}</td>
                <td>{{ montre.prix }}</td>
                <td>{{ montre.disponibilite }}</td>
                <td>{{ montre.resume }}</td>
                <td>{{ montre.description }}</td>
                <td>{{ montre.genre }}</td>
                <td>{{ montre.age }}</td>
                <td>{{ montre.boitier }}</td>
                <td>{{ montre.couleurducadran }}</td>
                <td>{{ montre.couleurboitier }}</td>
                <td>{{ montre.taille }}</td>
                <td>{{ montre.epaisseur }}</td>
                <td>{{ montre.verre }}</td>
                <td>{{ montre.affichage }}</td>
                <td>{{ montre.mouvement }}</td>
                <td>{{ montre.bracelet }}</td>
                <td>{{ montre.couleurdubracelet }}</td>
                <td>{{ montre.entrecorne }}</td>
                <td>{{ montre.fermoir }}</td>
                <td>{{ montre.etancheite }}</td>
                <td>{{ montre.garantie }}</td>
                <td>{{ montre.image }}</td>
                <td>
                    <a href="{{ path('montre_show', {'id': montre.id}) }}">show</a>
                    <a href="{{ path('montre_edit', {'id': montre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="25">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('montre_new') }}">Create new</a>
{% endblock %}
