{% block title %}Montre index{% endblock %}

{% block body %}
    <h1>Montre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Reference</th>
                <th>Prix</th>
                <th>Disponibilite</th>
                <th>Resume</th>
                <th>Description</th>
                <th>Genre</th>
                <th>Age</th>
                <th>Boitier</th>
                <th>Couleurducadran</th>
                <th>Couleurboitier</th>
                <th>Taille</th>
                <th>Epaisseur</th>
                <th>Verre</th>
                <th>Affichage</th>
                <th>Mouvement</th>
                <th>Bracelet</th>
                <th>Couleurdubracelet</th>
                <th>Entrecorne</th>
