{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
    <h1>Livre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>DateLimiteDeLalbum</th>
                <th>Editeur</th>
                <th>EditionOriginale</th>
                <th>Vendeur</th>
                <th>NbDeVente</th>
                <th>EtatGeneral</th>
                <th>PrixDeVente</th>
                <th>LieuDeVente</th>
                <th>IdDeVente</th>
                <th>DateLimiteDeVente</th>
                <th>Commentaire</th>
                <th>Image</th>
                <th>Langue</th>
                <th>Traducteur</th>
                <th>Format</th>
                <th>Collection</th>
                <th>Dateparution</th>
                <th>Nbrepage</th>
                <th>Ean</th>
                <th>Isbn</th>
                <th>Disponibilite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.dateLimiteDeLalbum }}</td>
                <td>{{ livre.editeur }}</td>
                <td>{{ livre.editionOriginale ? 'Yes' : 'No' }}</td>
                <td>{{ livre.vendeur }}</td>
                <td>{{ livre.nbDeVente }}</td>
                <td>{{ livre.etatGeneral }}</td>
                <td>{{ livre.prixDeVente }}</td>
                <td>{{ livre.lieuDeVente }}</td>
                <td>{{ livre.idDeVente }}</td>
                <td>{{ livre.dateLimiteDeVente }}</td>
                <td>{{ livre.commentaire }}</td>
                <td>{{ livre.image }}</td>
                <td>{{ livre.langue }}</td>
                <td>{{ livre.traducteur }}</td>
                <td>{{ livre.format }}</td>
                <td>{{ livre.collection }}</td>
                <td>{{ livre.dateparution }}</td>
                <td>{{ livre.nbrepage }}</td>
                <td>{{ livre.ean }}</td>
                <td>{{ livre.isbn }}</td>
                <td>{{ livre.disponibilite }}</td>
                <td>
                    <a href="{{ path('livre_show', {'id': livre.id}) }}">show</a>
                    <a href="{{ path('livre_edit', {'id': livre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="24">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('livre_new') }}">Create new</a>
{% endblock %}
